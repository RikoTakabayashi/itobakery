<h1>itobakery</h1>
<h3>パン詳細</h3>
<div class="pan">
  <p><%= @pan.name %></p>
  <p><%= @pan.created_at %></p>
</div>
<div class="comment-wrapper">
  <p>コメント一覧</p>
  <% @comments.each do |c| %>
    <div>
      <%= c.user.email unless c.user.blank? %>
      <br>
      <%= c.content %>
    </div>
      <br>
  <% end %>

  <% if user_signed_in? %>
    <%= form_with(model: [@pan, @comment], local: true) do |f| %>
      <%= f.text_area :content %>
      <%= button_tag type: "submit" do %>
        <i class="far fa-comments"></i> コメントする
      <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to "パン一覧に戻る", pans_path %>

<%= link_to "編集する", edit_pan_path(@pan.id) %>